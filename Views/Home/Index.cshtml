@model IEnumerable<Registration.Models.StudentInformation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/layout/_Layout.cshtml";
}

<div class="container">
    <h1 class="text-center">Index</h1>

    <p class="text-center">
        <button class="btn btn-primary">
            <a asp-action="Create" asp-controller="Home" class="text-white">Create New</a>
        </button>
    </p>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.MobileNo)</th>
                    <th>@Html.DisplayNameFor(model => model.Lang)</th>
                    <th>@Html.DisplayNameFor(model => model.Gender)</th>
                    <th>@Html.DisplayNameFor(model => model.Languages)</th>
                    <th>@Html.DisplayNameFor(model => model.Date)</th>
                    <th>Photo</th> <!-- Added column for Photo -->
                    <th>Document</th> <!-- Added column for Document -->
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.MobileNo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Lang)</td>
                        <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                        <td>@Html.DisplayFor(modelItem => item.Languages)</td>
                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.PhotoPath))
                            {
                                <a href="~/uploads/@item.PhotoPath" target="_blank">
                                    <img src="~/uploads/@item.PhotoPath" alt="Photo" style="width: 50px; height: auto;" />
                                </a>
                            }
                            else
                            {
                                <span>No Photo</span>
                            }

                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.DocumentPath))
                            {
                                <a href="~/uploads/@item.DocumentPath" target="_blank">View Document</a>
                            }
                            else
                            {
                                <span>No Document</span>
                            }
                        </td>
                        <td>
                            <!-- Flexbox to align buttons in a row -->
                            <div class="btn-group">
                                <button class="btn btn-warning">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-white">Edit</a>
                                </button>
                                <button class="btn btn-info">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="text-white">Details</a>
                                </button>
                                <button class="btn btn-danger">
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-white">Delete</a>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
    </div>
</div>
